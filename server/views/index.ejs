<!DOCTYPE html>
<html lang="ua">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список дел</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <h1>Список дел</h1>
    <form method="post" action="/">
        <input type="text" name="text" placeholder="Задание">
        <input type="submit" value="Отправить">
    </form>
    <ul id="ul">
        <% tasks.forEach( details => { %>
          <li id="<%= details._id %>"><div>
            <span data-task-id="<%= details._id %>"><%= details.text %></span>
            <a href="/edit/<%= details._id %>"><span>Edit</span></a>
            <button data-id="<%= details._id %>" class="delete">Delete</button>
        </div></li>
            
        <% }) %>
    </ul>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/scripts/socket_index.js"></script>
</body>
</html>